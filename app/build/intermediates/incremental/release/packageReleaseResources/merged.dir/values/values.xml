<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="backgroundColor">#F5F5F5</color>
    <color name="black">#FF000000</color>
    <color name="gray">#808080</color>
    <color name="gray_dark">#2C2C2C</color>
    <color name="gray_variant">#4B4B4B</color>
    <color name="primaryColor">#6200EE</color>
    <color name="primaryTextColor">#000000</color>
    <color name="secondaryColor">#D1C4E9</color>
    <color name="secondaryTextColor">#757575</color>
    <color name="white">#FFFFFFFF</color>
    <color name="yellow_dark">#FFAB00</color>
    <color name="yellow_primary">#FFC400</color>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <string name="app_name">Tengiz Bank</string>
    <string name="title_home">Home</string>
    <string name="title_notifications">Notifications</string>
    <string name="title_services">Services</string>
    <string name="title_tengiz_qr">Tengiz QR</string>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="Theme.Tengiz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="actionBarSize">0dp</item>  

        
        <item name="colorPrimary">@color/yellow_primary</item>
        <item name="colorPrimaryVariant">@color/yellow_dark</item>
        <item name="colorOnPrimary">@color/black</item>

        
        <item name="colorSecondary">@color/gray_variant</item>
        <item name="colorSecondaryVariant">@color/gray_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        
        <item name="android:navigationBarColor">@color/gray_variant</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>