<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <EditText
        android:id="@+id/search_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:drawableStart="@drawable/baseline_search_24"
        android:drawablePadding="8dp"
        android:hint="Поиск"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,HardcodedText,TextFields,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="16dp" />

    <!-- Horizontal Scrolling Images -->
    <HorizontalScrollView
        android:id="@+id/horizontal_scroll"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/search_edit_text"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/photographer"
                tools:ignore="ContentDescription,ImageContrastCheck" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tablet"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cat"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cross"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/moon"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/turtle"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Grid of ImageButtons -->
    <GridLayout
        android:id="@+id/button_grid"
        android:layout_width="386dp"
        android:layout_height="213dp"
        android:layout_margin="16dp"
        android:columnCount="4"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_scroll">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/baseline_shopping_cart_24"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/baseline_devices_other_24"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/sharp_article_24"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/baseline_repeat_24"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/baseline_html_24"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/baseline_local_mall_24"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/baseline_account_balance_24"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/baseline_insert_chart_outlined_24"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>