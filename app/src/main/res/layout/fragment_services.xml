<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок страницы -->
        <TextView
            android:id="@+id/tvServicesHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сервисы"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- Первый сервис -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_service_mobile"
                    android:contentDescription="Иконка сервиса"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/tvServiceName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Мобильная связь"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvServiceDescription1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Подключите или пополните баланс мобильной связи"
                        android:textSize="14sp"
                        android:paddingTop="4dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnServiceAction1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Подключить"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Второй сервис -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_service_internet"
                    android:contentDescription="Иконка сервиса"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/tvServiceName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Интернет"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvServiceDescription2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Подключите домашний интернет или оплатите услуги"
                        android:textSize="14sp"
                        android:paddingTop="4dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnServiceAction2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Подробнее"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Добавьте дополнительные сервисы по аналогии -->

    </LinearLayout>
</ScrollView>
