<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок страницы -->
        <TextView
            android:id="@+id/tvStatisticsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Статистика"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- Метрики -->
        <TextView
            android:id="@+id/tvTotalSpent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Общие расходы: ₽0.00"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvTotalIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Общий доход: ₽0.00"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvNetSavings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Чистые сбережения: ₽0.00"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <!-- График или диаграмма -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="График расходов за месяц"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/ivStatisticsChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/sample_chart_image"
            android:contentDescription="График расходов" />

        <!-- Кнопка обновления статистики -->
        <Button
            android:id="@+id/btnRefreshStatistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Обновить статистику"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
